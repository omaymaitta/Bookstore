  opacity: .5;
}

.button-73 {
  appearance: none;
  background-color: C1BBBA;
  border-radius: 6px;
  border-style: none;
  box-shadow: #837F7F  0 -12px 6px inset;
  box-sizing: border-box;
  color: #000000;
  cursor: pointer;
  display: inline-block;
  font-family: -apple-system,sans-serif;
  font-size: 1.2rem;
